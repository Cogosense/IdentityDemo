extends layout_min

block content

    h2
        span(class="glyphicon glyphicon-log-in")
        |  Forgot Password

    if error.length > 0
        // show any error messages that come back with authentication
        div(class="alert alert-danger") #{error}

    if info.length > 0
        // show any informational messages that come back with authentication
        div(class="alert alert-info") #{info}

    if success.length > 0
        // show any alert messages that come back with authentication
        div(class="alert alert-success") #{success}

    // FORGOT PASSWORD FORM
    form(action="/forgot" method="post")
        div(class="form-group")
            label Email
            input(type="email" class="form-control" name="email")

        button(type="submit" class="btn btn-warning btn-lg") Reset Password

    hr

    p OK I've remembered my password!
        a(href="/login")  Login
    p Or I've forgotton my registered email address as well!
        |  (Sorry you will need to create a new account)
        a(href="/signup")  Signup

